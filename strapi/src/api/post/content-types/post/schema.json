{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "content": {
      "type": "blocks",
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "posts"
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::post.post",
      "description": "Parent post (when this post is a comment)",
      "inversedBy": "comments"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post",
      "description": "Comments to this post (also posts)",
      "mappedBy": "parent"
    },
    "commentsTotal": {
      "type": "integer",
      "description": "Total number of comments to this post",
      "default": 0
    }
  }
}
